<div class="auth-page">
    <div class="auth-page__box">
        <h1>
            {{title}}
        </h1>

        {{>TextField name=emailName label=emailLabel}}

        {{>Spacing size="small"}}

        {{>TextField name=loginName label=loginLabel required="required"}}

        {{>Spacing size="small"}}

        {{>TextField name=firstNameName label=firstNameLabel required="required"}}

        {{>Spacing size="small"}}

        {{>TextField name=secondNameName label=secondNameLabel required="required"}}

        {{>Spacing size="small"}}

        {{>TextField type="number" name=phoneName label=phoneLabel required="required"}}

        {{>Spacing size="small"}}

        {{>TextField type="password" name=passwordName label=passwordLabel required="required"}}

        {{>Spacing size="small"}}

        {{>TextField type="password" name=repeatPasswordName label=repeatPasswordLabel required="required"}}

        {{>Spacing size="ularge"}}

        {{>Spacing size="xxlarge"}}

        {{>Button name=regText block="true" onClick="_handleLocation('messages')"}}

        {{>Spacing size="xxsmall"}}

        {{>Button name=authText block="true" view="link" onClick="_handleLocation('login')"}}
    </div>
</div>
